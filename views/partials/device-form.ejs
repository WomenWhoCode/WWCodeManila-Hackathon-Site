<div class="form-group row">
  <label for="deviceType" class="col-sm-2 col-form-label">Type</label>
  <div class="col-sm-10">
    <input type="text" class="form-control" id="deviceType" placeholder="Ex: Laptop, Smartphone" required value=<%= device.type %>>
  </div>
</div>

<div class="form-group row">
  <label for="deviceDescription" class="col-sm-2 col-form-label">Description</label>
  <div class="col-sm-10">
    <input type="text" class="form-control" id="deviceDescription" placeholder="Ex: 13-inch MacBook Pro, iPhone X" required value=<%= device.description %>>
  </div>
</div>

<button class="btn btn-default" type="submit">
  Register
</button>
